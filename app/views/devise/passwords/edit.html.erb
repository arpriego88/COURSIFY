<div class="row">
  <div class="panel large-8 large-centered columns">
    <h2 class="text-center">Change Your Password</h2></br>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: "Password (8 characters minimum)" %>
      </div>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
      </div>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.submit "Change my password", class: "small button primary expand" %>
      </div>
    <% end %>

    <div class="small-12 large-11 large-centered columns">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
