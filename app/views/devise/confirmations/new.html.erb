<div class="row">
  <div class="panel large-8 large-centered columns">
    <h2 class="text-center">Resend confirmation instructions</h2></br>
    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
      </div>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.submit "Resend confirmation instructions", class: "small button primary expand" %>
      </div>
    <% end %>

    <div class="small-12 large-11 large-centered columns">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
