<div id="newModal" class="reveal-modal medium" data-reveal aria-labelledby="newCourse" aria-hidden="true" role="dialog">
    <h2 class="text-center">Sign In</h2></br>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="small-12 large-11 large-centered columns ">
        <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
      </div>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="small-12 large-11 large-centered columns ">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.submit "Log in", class: "small button primary expand" %>
      </div>
    <% end %>

    <div class="small-12 large-11 large-centered columns">
      <%= render "devise/shared/links" %>
    </div>
</div>
