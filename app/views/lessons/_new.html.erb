<div id="newModal" class="reveal-modal medium" data-reveal aria-labelledby="newCourse" aria-hidden="true" role="dialog">
  <h2 class="text-center">New Lesson</h2></br>
    <%= form_for [@course, @lesson], input_html: {multipart: true} do |f| %>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.text_field :name, autofocus: true, placeholder: 'Name' %>
      </div>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.text_field :description, autofocus: true, placeholder: 'Description' %>
      </div>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.file_field :video_url, placeholder: 'Put your video here' %>
      </div>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.text_area :content, autofocus: true, placeholder: 'Paste in your lesson content' %>
      </div>

      <div class="small-12 large-11 large-centered columns ">
        <%= f.text_field :exercise_name, placeholder: "Exercise name" %>
      </div>

       <div class="small-12 large-11 large-centered columns ">
        <%= f.text_area :exercise_content, placeholder: "Exercise content" %>
      </div>

      <%= f.hidden_field :teacher_id, value: current_user.id, class: 'form-control'  %>

      <div class="small-12 large-11 large-centered columns "> 
        <%= f.submit "Create Lesson", class: "small button primary expand" %>
      </div>
    <% end %>
</div>
