<h1>Courses</h1>
<%= link_to 'New Course', new_course_path, class: "small button primary" %>

<% @courses.each do |course| %>
  <h2><%= course.name %>
  <% if course.complete? %>
    <i class= "fa fa-check-circle-o" style= "color: green;"></i>
  <% else %>
    <i class= "fa fa-circle-o" style= "color: red;"></i>
  <% end %>
  </h2>
  <p><%= course.description %></p>
  <%= link_to 'Show Course', course_path(course), class: "small button primary" %> 
  <%= link_to 'Edit Course', edit_course_path(course), class: "small button primary" %> 
  <%= link_to 'Delete Course', course, method: :delete, class: "small button primary" %>
<% end %>


