<div class="row">

  <div class="large-8 large-centered columns">
  <h2 class="text-center">

  <%= course_complete_check(@course, current_user.id) %>
  <%= @course.name %></h2>
  <%= @course.description %>
  <br><hr>
  <!-- <div class="progress small-0 large-50 secondary alert success radius round">
   <span class="meter" style="width: 50%"></span> -->

  </div>
  
    <% @course.lessons.each do |lesson| %>
      
      <div class="lessonslide">

        <%= lesson_complete_check(lesson, current_user) %>
        <%= link_to lesson.name, course_lesson_path(@course, lesson) %>
        <%= lesson.description %>
        <%= lesson.content %>
        <p><%= lesson.video_time %></p>
        <div class="lessonEditDelete">
          <% if can? :manage, lesson %>
            <%= link_to 'Edit', edit_course_lesson_path(@course, lesson), class: "tiny button primary" %> 
            <%= link_to 'Delete', course_lesson_path(@course, lesson), method: :delete, class: "tiny button primary" %>
          <% end %>
        </div>
      </div>
      
    <% end %>

  
    
  <% if can? :manage, @course %>
    <%= link_to 'Add Lesson', new_course_lesson_path(@course), class: "small button primary" %>
  <% end %>
  <%= link_to 'Back', courses_path, class: "small button primary" %>

  </div>


</div>






