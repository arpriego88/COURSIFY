<div class="large-8 large-centered columns panel">
  <h1 class="text-center">Quiz <%= @quiz.title %> for <%= @lesson.name %></h1>

  <%= form_for :submission, url: grade_path, remote: true  do |f|%>
    <% @quiz.questions.each do |question| %>
      <p><%= question.content %></p>
      <% question.answers.each do |answer| %>
        <%= f.radio_button question.id, answer.correct %> <%= answer.content %><br>
      <% end %>
    <% end %>
    <br>
    <%= hidden_field_tag :lesson_id, @lesson.id %>
    <%= hidden_field_tag :quiz_id, @quiz.id %>
    <%= f.submit 'See Results'%>
  <% end %>
</div>
<div id='grade-form' style='display:none;'></div>
